{
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "CommonJS",
    "target": "es6",
    "removeComments": true,
    "preserveConstEnums": true,
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src/",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}
